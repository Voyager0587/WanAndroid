<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回复了@xujiafeng"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        />
<TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/title"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="40dp"
    android:text="这里的8192是一个经验值，一般情况下，栈的大小为8KB，所以这里减去8192是为了获取栈底的地址。如果当前函数的栈帧地址小于栈底的地址，就说明栈已经溢出了，需要抛出StackOverflowError"
    android:maxLines="2"
    android:ellipsize="end"

    />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2023-07-03 22:19"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@id/title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_light_plus"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/time"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dot"
        android:visibility="invisible"
        />
</RelativeLayout>