<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_article"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/article_round10"
    android:layout_margin="5sp">

    <TextView
        android:id="@+id/chapterName"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="官方"
        android:textSize="13sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="2023-06-07 21:01"
        android:textColor="@color/black" />
    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/title"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chapterName"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="Android 14 之返回界面升级：预览目标界面 + 全新返回箭头fasfsfswffsffsa"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/top_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:padding="1dp"
        android:text="置顶"
        android:visibility="gone"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:text="郭霖" />
<ImageView
    android:id="@+id/like"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:background="@drawable/like"

    />
</RelativeLayout>