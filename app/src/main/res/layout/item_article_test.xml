<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_article"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/article_round">

    <TextView
        android:id="@+id/chapterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/chapter_name"
        android:gravity="center"
        android:text="站外文章"
        android:paddingVertical="2dp"
        android:paddingHorizontal="7dp"
        android:textColor="@color/color_gray_dark_plus"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="2023-06-07 21:01"
        android:textColor="@color/color_gray_dark" />


    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/title"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chapterName"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:text="Android 14 之返回界面升级：预览目标界面 + 全新返回箭头fasfsfswffsffsa"
        android:textColor="@color/black"
        android:textSize="17sp"

        />

    <TextView
        android:id="@+id/top_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:padding="1dp"
        android:text="置顶"
        android:visibility="gone"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_gray_dark_plus_plus"
        android:text="郭霖" />

    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:src="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:btn_fill_color="@android:color/holo_orange_dark"
        app:allow_random_color="true"
        app:enable_flashing="false"
        app:big_shine_color="#FF6666"
        app:click_animation_duration="200"
        app:shine_animation_duration="1500"
        app:shine_turn_angle="10"
        app:small_shine_offset_angle="20"
        app:small_shine_color="#CC9999"
        app:shine_count="8"
        app:siShape="@raw/heart"
        />

</RelativeLayout>
